{
  "name": "better-me",
  "version": "1.0.0",
  "description": "A gentle, gamified self-improvement desktop application for Windows 11",
  "main": "main.js",
  "homepage": "./",
  "author": "Better-Me Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AfyKirby1/Better-Me.git"
  },
  "scripts": {
    "dev": "webpack --config build/webpack.config.js --mode development && electron .",
    "dev:watch": "webpack --config build/webpack.config.js --mode development --watch",
    "build": "webpack --config build/webpack.config.js --mode production && electron-builder",
    "dist": "webpack --config build/webpack.config.js --mode production && electron-builder --publish=never",
    "package": "webpack --config build/webpack.config.js --mode production && electron-packager . Better-Me --platform=win32 --arch=x64 --out=build --overwrite --no-prune"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@reduxjs/toolkit": "^1.9.7",
    "date-fns": "^2.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "autoprefixer": "^10.4.16",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2",
    "html-webpack-plugin": "^5.5.3",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.6",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.betterme.app",
    "productName": "Better-Me",
    "directories": {
      "output": "build/desktop"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": false,
      "verifyUpdateCodeSignature": false
    },
    "portable": {
      "artifactName": "Better-Me-Portable.exe"
    },
    "forceCodeSigning": false
  }
}
